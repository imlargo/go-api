# Server Configuration
API_URL=http://localhost
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/butter_db

# JWT Authentication
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ISSUER=butter-app
JWT_AUDIENCE=butter-users
JWT_TOKEN_EXPIRATION=15
JWT_REFRESH_EXPIRATION=10080

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TIMEFRAME=60

# Push Notifications (Web Push)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# API Security
PRIVATE_API_KEY=your-private-api-key

# Legacy
XANO_BASE_URL=https://your-xano-instance.com

# Cloud Storage (R2/S3 Compatible)
STORAGE_BUCKET_NAME=your-bucket-name
STORAGE_ACCOUNT_ID=your-account-id
STORAGE_ACCESS_KEY_ID=your-access-key-id
STORAGE_SECRET_ACCESS_KEY=your-secret-access-key
STORAGE_PUBLIC_DOMAIN=https://your-cdn-domain.com
STORAGE_USE_PUBLIC_URL=true

# Social Media APIs
RAPIDAPI_INSTAGRAM_KEY=your-rapidapi-instagram-key
RAPIDAPI_TIKTOK_KEY=your-rapidapi-tiktok-key

# OnlyFans Integration
ONLYFANS_API_KEY=your-onlyfans-api-key

# Media Processing
SHOTSTACK_API_KEY=your-shotstack-api-key

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key

# Stripe Payment System
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (from Stripe Dashboard)
STRIPE_PRICE_STARTER=price_starter_monthly_id
STRIPE_PRICE_GROWTH=price_growth_monthly_id
STRIPE_PRICE_SCALE=price_scale_monthly_id

# Stripe Customer Portal Configuration ID (optional)
# If not set, Stripe will use the default portal configuration from your dashboard
# Get this from: https://dashboard.stripe.com/settings/billing/portal
STRIPE_PORTAL_CONFIGURATION_ID=bpc_your_portal_configuration_id

# Subscription URLs
SUBSCRIPTION_SUCCESS_URL=https://app.hellobutter.io/subscription/success
SUBSCRIPTION_CANCEL_URL=https://app.hellobutter.io/pricing
MARKETPLACE_SUCCESS_URL=https://app.hellobutter.io/orders/{order_id}
MARKETPLACE_CANCEL_URL=https://app.hellobutter.io/marketplace

# Redis (REQUIRED - used for task queue and caching)
# Content generation requires Redis for the concurrent task queue system
REDIS_URL=redis://localhost:6379

# Task Queue Configuration (concurrent content generation)
TASK_WORKER_COUNT=7
TASK_TIMEOUT=30
TASK_MAX_RETRIES=3
TASK_INITIAL_RETRY_DELAY=30
TASK_MAX_RETRY_DELAY=30
TASK_HEARTBEAT_INTERVAL=30
TASK_ORPHAN_TIMEOUT=30
TASK_PRIORITY_HIGH_THRESHOLD=10
TASK_PRIORITY_NORMAL_THRESHOLD=5
TASK_DLQ_ALERT_THRESHOLD=10
